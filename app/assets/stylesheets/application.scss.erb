@import "bootstrap-sprockets";
@import "bootstrap";

.cake {
 text-align:  center;
 }

 .header {
 width: 100%;
 height: 80px;
 border-bottom: solid 1px #383838;
 }

ul {
 list-style: none;
}

.flex {
 display: flex;
}

.flex-width {
 width: 400px;
 display: flex;
 justify-content: space-around;
}

.a-orders-show {
 width: 200px;
 text-align: right;
}

.form-tit {
 margin-right: 10px;
 width: 100px;
 float: left;
}


.cost {
 margin-top: 70px;
 margin-left: 30px;
}

.display-center {
 height: 200px;
 display: flex;
 justify-content: center;
 align-items: center;
}

.display-flex {
 display: flex;
 justify-content: space-around;
 }

.dl .dt {
 width: 150px;
 padding: 5px 0;
 float: left;
 clear: both;
}

.dl .dd {
 padding:5px 0;
}

.circle {
    border-radius: 50%;
    padding: 5px 10px;
    margin-bottom: 5px;
    border: solid 1px;
    color: black;
}


 .footer_inner {
 height: 80px;
 background-color: silver;
 }

 .footer_box {
 display: flex;
 justify-content: center;
 align-items: center;
 height: 80px;
 }

