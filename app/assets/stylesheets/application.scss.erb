@import "bootstrap-sprockets";
@import "bootstrap";

.cake {
 text-align:  center;
 }

 .header {
 width: 100%;
 height: 120px;
 padding: 30px 20px;
 border-bottom: solid 1px #383838;
 }

.margin {
 margin-top: 40px;
}

.logo {
 margin: 0;
 margin-left: 50px;
 padding: 10px;
 border: 1px solid #383838;
 border-radius: 20px;
 background-color: yellow;
 }

.logo_txt {
 color: #660000;
 font-weight: bold;
}

.search{
 position: relative;
}

.search-input {
 position: absolute;
 right: 60px;
 top: 40px;
}

.search-btn {
 position: absolute;
 right: 20px;
 top: 40px;
}

.mx-auto {
 width: 400px;
 margin: 0 auto;
}

.login_ul {
 list-style: none;
 margin-top: 30px;
}

.login-label {
 margin-right: 20px;
 width: 100px;
 float: left;
}

.login-btn {
 margin-left: 100px;
 margin-top: 40px;
}

 .footer_inner {
 height: 80px;
 background-color: silver;
 }

 .footer_box {
 display: flex;
 justify-content: center;
 align-items: center;
 height: 80px;
 }
 
 /*ページネーション自体のデザイン*/
.pagination>li>a {          
  border: none;     /*枠線をなくす*/
  color: #696969;   /*文字の色を変える*/
}

/* 表示しているページ番号のデザイン */
.pagination>.active>a {     
  background: #93c9ff;     /*背景の色を変える*/
  border-radius: 15px;     /*角を丸くする*/
}

/*ホバー時のデザイン*/
.pagination>li>a:hover {        
  border-radius: 15px;    /*角を丸くする*/
}