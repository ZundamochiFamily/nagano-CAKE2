@import "bootstrap-sprockets";
@import "bootstrap";

.cake {
 text-align:  center;
 }

 .header {
 width: 100%;
 height: 120px;
 padding: 30px 20px;
 border-bottom: solid 1px #383838;
 background-color: #33CC99;
 background-image: url("<%= asset_path('cup.jpg') %>")
 }

.header_item {
border: solid 1px #323232;
background-color: #fffacd;
border-radius: 20px;
}

.header_btn {
color: #383838;
}

.row-height {
height: 650px;
}

ul {
 list-style: none;
}

.flex {
 display: flex;
}

.relative {
 position: relative;
 height: 30px;
}

.absolute {
 position: absolute;

}

.absolute1 {
 position: absolute;
 left: 150px;
}

.absolute2 {
 position: absolute;
 left: 250px;
}

.thanks {
 width: 100%;
 background-image: url("<%= asset_path('thanks.jpg') %>");
 background-size: cover;
 height: 500px;
}

.thanks_box {
 width: 100%;
 height: 500px;
 display:flex;
 justify-content: center;
 align-items: center;
}

.thanks-tit {
font-size: 60px;
margin-top: 220px;
}

.thanks_txt {
margin-left: 50px;
}

.a-orders-show {
 width: 200px;
 text-align: right;
}

.form-tit {
 margin-right: 10px;
 width: 100px;
 float: left;
}

.margin-top {
margin-top: 40px;
}

.cost {
 margin-top: 70px;
 margin-left: 30px;
}

.display-center {
 height: 200px;
 display: flex;
 justify-content: center;
 align-items: center;
}

.display-flex {
 display: flex;
 justify-content: space-around;
 }

.dl .dt {
 width: 150px;
 padding: 5px 0;
 float: left;
 clear: both;
}

.dl .dd {
 padding:5px 0;
}

.circle {
    border-radius: 50%;
    padding: 5px 10px;
    margin-bottom: 5px;
    border: solid 1px;
    color: black;
}

.margin {
 margin-top: 40px;
}

.logo {
 margin: 0;
 margin-left: 50px;
 padding: 10px;
 border: 1px solid #383838;
 border-radius: 20px;
 background-color: #fffacd;
 }

.logo_txt {
 color: #660000;
 font-weight: bold;
 font-family: Comic Sans MS;
}

.search{
 position: relative;
}

.search-input {
 position: absolute;
 right: 60px;
 top: 40px;
}

.search-btn {
 position: absolute;
 right: 20px;
 top: 40px;
}

.mx-auto {
 width: 400px;
 margin: 0 auto;
}

.login_ul {
 list-style: none;
 margin-top: 30px;
}

.login-label {
 margin-right: 20px;
 width: 100px;
 float: left;
}

.login-btn {
 margin-left: 100px;
 margin-top: 40px;
}

 .footer_inner {
 height: 80px;
 background-color: silver;
 }

 .footer_box {
 display: flex;
 justify-content: center;
 align-items: center;
 height: 80px;
 }

 /*ページネーション自体のデザイン*/
.pagination>li>a {
  border: none;     /*枠線をなくす*/
  color: #696969;   /*文字の色を変える*/
}

/* 表示しているページ番号のデザイン */
.pagination>.active>a {
  background: #93c9ff;     /*背景の色を変える*/
  border-radius: 15px;     /*角を丸くする*/
}

/*ホバー時のデザイン*/
.pagination>li>a:hover {
  border-radius: 15px;    /*角を丸くする*/
}

