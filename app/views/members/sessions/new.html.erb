<div class="col-xs-offset-1 col-xs-11 margin">
  <h3 class="col-sm-6 text-left title">会員の方はこちらからログイン</h3>
  <%= form_with model: @member, url: member_session_path, local: true do |f| %>
    <div class="field form-group col-xs-9">
      <%= f.label :"メールアドレス", class: "col-sm-4 control-label text-right" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-8 form-control-static" %>
    </div>
    <div class="field form-group col-xs-9">
      <%= f.label :"パスワード", class: "col-sm-4 control-label text-right" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-8 form-control-static" %>
    </div>
    <div class="actions col-xs-5">
        <%= f.submit "　ログイン　", class: "btn btn-primary pull-right btn-lg" %>
    </div>
    <div class="field form-group col-xs-9">
      <h3 class="col-sm-6 text-left title">登録がお済みでない方</h3>
    </div>
    <div class="field form-group col-xs-9">
      <div class="text-center"><%= link_to 'こちら', new_member_registration_path %>から新規登録を行ってください。</div>
    </div>
  <% end %>
  </div>