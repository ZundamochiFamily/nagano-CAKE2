<div class="row">
<h2>新規会員登録</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: { class: "form-horizontal" } )  do |f| %>
    	  <div class="form-group">
      		<label class="col-sm-2 control-label" for="InputEmail">名前（姓）</label>
      		<div class="col-sm-4">
      			<%= f.text_field :last_name, autofocus: true, class: "last_name form-control" %>
      		</div>
      	  <label class="col-sm-1 control-label" for="InputEmail">（名）</label>
      		<div class="col-sm-4">
      			<%= f.text_field :first_name, class: "first_name form-control" %>
      		</div>
    	  </div>
    	  <div class="form-group">
      		<label class="col-sm-2 control-label" for="InputEmail">フリガナ（セイ）</label>
      		<div class="col-sm-4">
      			<%= f.text_field :last_name_kana, class: "last_name_kana form-control" %>
      		</div>
      	  <label class="col-sm-1 control-label" for="InputEmail">（メイ）</label>
      		<div class="col-sm-4">
      			<%= f.text_field :first_name_kana, class: "first_name_kana form-control" %>
      		</div>
    	  </div>
    	  <div class="form-group">
      		<label class="col-sm-2 control-label" for="InputEmail">メールアドレス</label>
      		<div class="col-sm-4">
      			<%= f.email_field :email, class: "email form-control" %>
      		</div>
    	  </div>
      	<div class="form-group">
      		<label class="col-sm-2 control-label" for="InputEmail">郵便番号</label>
      		<div class="col-sm-4">
      			<%= f.text_field :postal_code, class: "postal_code form-control" %>
      		</div>
    	  </div>
      	<div class="form-group">
      		<label class="col-sm-2 control-label" for="InputEmail">住所</label>
      		<div class="col-sm-10">
      			<%= f.text_field :address, class: "address form-control" %>
      		</div>
    	  </div>
    	  <div class="form-group">
      		<label class="col-sm-2 control-label" for="InputEmail">電話番号</label>
      		<div class="col-sm-4">
      			<%= f.text_field :phone_number, class: "phone_number form-control" %>
      		</div>
    	  </div>
    	  <div class="form-group">
      		<label class="col-sm-2 control-label" for="InputEmail">パスワード</label>
      		<div class="col-sm-4">
      			<%= f.password_field :password, class: "password form-control" %>
      		</div>
    	  </div>
    	  <div class="form-group">
      		<label class="col-sm-2 control-label" for="InputEmail">パスワード（確認用）</label>
      		<div class="col-sm-4">
      			<%= f.password_field :password_confirmation, class: "password_confirmation form-control" %>
      		</div>
    	  </div>
    	  <div class="row">
        <%= f.submit "新規登録" ,class: "btn btn-success col-xs-offset-5 col-xs-2 col-xs-offset-5" %>
        </div>
  <% end %>
  <h3>　既に登録済みの方　</h3>
 <div><%= link_to 'こちら', new_member_session_path %>からログインしてください。</div>

</div>