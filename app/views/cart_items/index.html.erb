<div class="topic">
  <span>ショッピングカート</span>
  <span><%= link_to "カートを空にする", cart_items_all_destroy_path %></span>
</div>
<table>
  <colgroup span="5"></colgroup>
  <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>
  <% @cart_items.each do |cart_item|
  <tr>
    <td><%= cart_item.item_name %></td>
    <td><%= cart_item.tax_excluded_price %></td>
    <td><%= cart_item.quantity %></td>
    <td><%= price_included_tax %></td>
    <td><%= link_to "削除する", cart_item_path(cart_item) %></td>
  </tr>
</table>
<div class="topic_under">
  <span><%= link_to '買い物を続ける', items_path </span>
  <span>合計金額:</span>
</div>