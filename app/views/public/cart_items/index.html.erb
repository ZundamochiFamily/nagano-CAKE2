<div class="col-xs-12">
  <%= flash[:success] %>
  <div class="topic">
    <span>ショッピングカート</span>
    <span><%= link_to "カートを空にする", cart_items_path, class:"btn btn-dark" %></span>
  </div>
  <table>
   
    <tr>
      <th colspan="4">商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.item_name %></td>
        <% price_included_tax = cart_item.tax_excluded_price * tax %>
      <td><%= price_included_tax %></td>
    <% form_with @cart_item, url: {controller: 'public/cart_items', action: 'update' } do |f| %>
      <td><%= f.number_field :quantity, :value => cart_item.quantity %>
          <%= link_to '変更', cart_item_path, class:"btn btn-primary" %>
      </td>
    <% end %>
    <% sub_total = price_included_tax * cart_item.quantity %>
      <td><%= sub_total %></td>
      <td><%= link_to "削除する", cart_item_path(cart_item), class:"btn btn-danger" %></td>
    </tr>
    <% end %>
  </table>
  <div class="topic_under">
    <span><%= link_to '買い物を続ける', items_path, class:"btn btn-primary" %></span>
    <span>合計金額:<%= @sum  %></span>
  </div>
  <div class="center-block">
    <%= link_to '情報入力に進む', new_order_path, class:"btn btn-lg btn-success" %>
  </div>
</div>