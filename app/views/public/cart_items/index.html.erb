<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%= flash[:success] %>
      <div class="topic">
        <span>ショッピングカート</span>
        <span><%= link_to "カートを空にする", cart_items_path, method: :delete, class:"btn btn-dark" %></span>
      </div>
      <table border="3" width="60%">
        <tr>
          <th width="40%">商品名</th>
          <th width="15%">単価(税込)</th>
          <th width="15%">数量</th>
          <th width="15%">小計</th>
          <th width="15%"></th>
        </tr>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td width="40%"><%= cart_item.item.item_name %></td>
            <% price_included_tax = (cart_item.item.tax_excluded_price).to_i * 1.1 %>
          <td width="15%"><%= price_included_tax %></td>
        <% form_with @cart_item, url: {controller: 'public/cart_items', action: 'update' }, method: :patch do |f| %>
          <td width="15%"><%= f.number_field :quantity, :value => cart_item.item.quantity %>
            <%= link_to '変更', cart_item_path, class:"btn btn-primary" %>
          </td>
        <% end %>
        <% sub_total = price_included_tax * cart_item.item.quantity %>
          <td width="15%"><%= sub_total %></td>
          <td width="15%"><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class:"btn btn-danger" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row mt-10">
    <div class="col-xs-3">
      <%= link_to '買い物を続ける', items_path, class:"btn btn-primary" %>
    </div>
    <div class="col-xs-7 pull-right">
      <table border="2" width="40%">
        <tr>
          <td width="50%">合計金額</td>
          <td width="50%"><%= @sum  %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row text-center">
    <div class="col-xs-6 offset-xs-3">
      <%= link_to '情報入力に進む', new_order_path, class:"btn btn-lg btn-success" %>
    </div>
  </div>
</div
