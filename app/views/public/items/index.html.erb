<div class="row">
  <div class="col-xs-3" style='border:1px solid;'>
    <h2><strong>ジャンル検索</strong></h2>
    <% @genres.each do |genre| %>
    <div>
      <ul style='list-style:none;'>
        <li><%= genre.genre_name %></li>
      </ul>
    </div>
    <% end %>
  </div>

  <div class="col-xs-9">

    <h2>商品一覧</h2>
    <div class="row">

      <% @items.each do |item| %>
        <div class="col-xs-3">
          <div class="image_box">
      <%= attachment_image_tag item, :item_image, :fill, 180, 100, fallback: "no_image.png", size: "180x100" %>
        <p>
          <%= link_to item_path(item) do %>
          <%= item.item_name %>
          <% end %>
        </p>
      <p>￥<%= item.tax_excluded_price.to_s(:delimited, delimiter: ",") %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  </div>

