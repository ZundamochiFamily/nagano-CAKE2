<h3>編集画面</h3>
<%= form_with model:@delivery,local:true do |f| %>

<ul class="delivery_edit_list">
  <li class="delivery_edit_item">
     <label class="delivery_edit_label">郵便番号(ハイフンなし)</label>
     <%= f.text_field :postal_code %>
  </li>

  <li class="delivery_edit_item">
    <label class="delivery_edit_label">住所</label>
    <%= f.text_field :address, class: "delivery_edit_form" %>
  </li>

  <li class="delivery_edit_item">
  <label class="delivery_edit_label">宛名</label>
  <%= f.text_field :reciever_name %>
  </li>

</ul>
<div class="text-right">
 <%= f.submit "編集する", class: "btn btn-primary" %>
</div>
<% end %>