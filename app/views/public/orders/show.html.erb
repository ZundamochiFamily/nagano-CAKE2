<h2>注文履歴詳細</h2>
<div class="row">
  <div class="col-xs-6">
    <table border="1" width="90%">
      <caption>注文情報</caption>
      <tr>
        <td class="col-xs-5 text-center">注文日</td>
        <td class="col-xs-7 text-center">
          <%= @order.created_at.strftime('%Y/%m/%d') %>
        </td>
      </tr>
      <tr>
        <td class="text-center">配送先</td>
        <td class="text-center">
          <%= "〒#{@order.postal_code}" %><br>
          <%= @order.address %><br>
          <%= "#{@order.reciever_name} 様" %>
        </td>
      </tr>
      <tr>
        <td class="text-center">支払方法</td>
        <td class="text-center">
          <%= @payment_method %>
        </td>
      </tr>
      <tr>
        <td class="text-center">ステータス</td>
        <td class="text-center">
          <%= @order.order_status %>
        </td>
      </tr>
    </table>
  </div>

  <div class="col-xs-6">
    <table border="1" width="60%">
      <caption>請求情報</caption>
        <tr>
          <td class="text-center">商品合計</td>
          <td class="text-center"><%= "#{@total.inject{|sum, n| sum + n}.to_s(:delimited, delimiter: ",")}円" %></td>
        </tr>
        <tr>
          <td class="text-center">配送料</td>
          <td class="text-center"><%= "#{@shipping.to_s(:delimited, delimiter: ",")}円" %></td>
        </tr>
        <tr>
          <td class="text-center">ご請求額</td>
          <td class="text-center">
            <% if @total.count == 1 %>
              <%= "#{(@total[0] + @shipping).to_s(:delimited, delimiter: ",")}円" %>
            <% else %>
              <%= "#{(@total.inject{|sum, n| sum + n } + @shipping).to_s(:delimited, delimiter: ",")}円" %>
            <% end %>
          </td>
        </tr>
    </table>
  </div>
</div>
<div class="row">
  <div class="col-xs-9">
    <table border="1" width="50%" style="margin-bottom:20px">
      <caption>注文内容</caption>
      <tr>
        <th class="text-center">商品</th>
        <th class="text-center">単価（税込）</th>
        <th class="text-center">個数</th>
        <th class="text-center">小計</th>

      <% @order.ordered_items.each do |ordered_item| %>
        </tr>
          <td class="text-center"><%= ordered_item.item.item_name %></td>
          <td class="text-center"><%= "#{ordered_item.purchased_price.to_s(:delimited, delimiter: ",")}円" %></td>
          <td class="text-center"><%= ordered_item.quantity %></td>
          <% sub_total = ordered_item.purchased_price * ordered_item.quantity %>
          <td class="text-center"><%= "#{sub_total.to_s(:delimited, delimiter: ",")}円" %></td>
        <tr>
      <% end %>
    </table>
  </div>
</div>
