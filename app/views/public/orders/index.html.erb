
<h2>注文履歴一覧</h2>

<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <%  @orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td><%= order.address %></td>
      <td><% order.items.each do |item| %>
            <%= item.item_name %>
          <% end %>
      </td>
      <td><%= order.biling_amount %></td>
      <td><% if order.order_status == 0 %>
      <p>入金待ち</p>
      <% elsif order.order_status == 1 %>
      <p>入金確認</p>
      <% elsif order.order_status == 2 %>
      <p>製作中</p>
      <% elsif order.order_status == 3 %>
      <P>発送準備中</P>
      <% elsif order.order_status == 4 %>
      <p>発送済み</p>
      <% end %>
      </td>
      <td><%= link_to "表示する", order_path(order.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
