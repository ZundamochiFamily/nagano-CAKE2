<table class="table1" style="float:left; margin-right:25px;" >
  <caption>注文情報確認</caption>
  <tr>
    <th colspan="2">商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
  </tr>
<% @cart_items.each do |cart_item| %>
  <tr>
    <td colspan="2">
      <%= attachment_image_tag(item, :item_image, :fill, 40, 60) %>
      <%= cart_item.items_name(item_id: params[item_id]) %>
    </td>
    <td><%= cart_item.tax_included_price %></td>
    <td><%= cart_item.quantity %></td>
  <% sub_total = order.tax_included_price * cart_item.quantity %>
    <td><%= sub_total %></td>
  </tr>
<% end %>
</table>
<table class="table1">
  <tr>
    <td>送料</td>
    <td>商品合計</td>
    <td>請求金額</td>
　</tr>
　<tr>
　　<td><% @shipping %></td>
    <td><%= @total_price %></td>
    <td><%= @biling_amount %></td>
  </tr>
</table>
<div class="payment_method">
  <span>支払い方法</span>
    <%= @order.payment_method %>
</div>
<div class="delivery_destinations">
  <span>お届け先</span>
    <%= @order.delivery_destinations %>
</div>
<%= form_with(model:[@order, @ordered_item], local:true) do |f| %>
<div class="btn_confirm">
  <%= f.hidden_field :quantity %>
  <%= f.hidden_field :sub_total %>
  <%= f.hidden_field:order_status %>
  <%= f.submit '購入を確定する' %>
</div>
<% end %>