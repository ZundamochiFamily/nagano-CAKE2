<div class="container">

<h2>商品一覧</h2>
<div>
<table class="col-xs-9 table">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜き価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= item.item_name %></td>
      <td><%= item.tax_excluded_price %></td>
      <td><%= item.genre.genre_name %></td>
      <td><% if item.sales_status == 0 %>
	   	     <p>販売中</p>
	   	   <% elsif item.sales_status == 1 %>
	   	     <p>販売停止中</p>
	   	  <% end %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>