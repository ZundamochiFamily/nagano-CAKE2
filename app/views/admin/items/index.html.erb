<div class="container">

<h2 class="title">商品一覧</h2>
<%= link_to "+", new_admin_item_path, data: {"turbolinks" => false}, class: "pull-right circle" %>
<div>
<table class="col-xs-9 table">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜き価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td>
        <%= link_to admin_item_path(item.id) do %>
        <%= item.item_name %>
        <% end %>
      </td>
      <td><%= item.tax_excluded_price %></td>
      <td><%= item.genre.genre_name %></td>
      <td><% if item.sales_status == 0 %>
	   	     <p>販売中</p>
	   	   <% elsif item.sales_status == 1 %>
	   	     <p>販売停止中</p>
	   	  <% end %>
	   	 </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>