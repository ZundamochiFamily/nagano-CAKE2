<h2>商品詳細</h2>

<div class="col-xs-3">
 <%= attachment_image_tag @item, :item_image, :fill, 100, 100, format: 'jpeg' %>
</div>
<div class="col-xs-12">
  <div class="field">
    <label>商品名</label>
     <%= @item.item_name %>
  </div>
  <div class="field">
    <label>商品説明</label>
    <%= @item.introduction %>
  </div>
  <div class="field">
    <label>ジャンル</label>
    <%= @item.genre_id %>
  </div>
  <div class="field">
    <label>税抜き価格</label>
    <%= @item.tax_excluded_price %>円
  </div>
  <div class="field flex">
	     <p>販売ステータス</p>
	   	   <% if @item.sales_status == 0 %>
	   	     <p>販売中</p>
	   	   <% elsif @item.sales_status == 1 %>
	   	     <p>販売停止中</p>
	   	  <% end %>
	   </div>
 </div>
 
</div>
