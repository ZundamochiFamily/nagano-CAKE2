<h2>商品詳細</h2>

<div class="col-xs-3">
 <%= attachment_image_tag @item, :item_image_id, :fill, 100, 100 %>
</div>
<div class="col-xs-12">
  <div class="field">
    <label>商品名</label>
     <%= @item.item_name %>
  </div>
  <div class="field">
    <label>商品説明</label>
    <%= @item.introduction %>
  </div>
  <div class="field">
    <label>ジャンル</label>
    <%= @item.genre_id %>
  </div>
  <div class="field">
    <label>税抜き価格</label>
    <%= @item.tax_excluded_price %>円
  </div>

</div>
