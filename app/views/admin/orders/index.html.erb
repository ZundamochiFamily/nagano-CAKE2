<h2>注文履歴一覧</h2>
  <table>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to admin_order_path(order) do %>
              <%= order.created_at.strftime('%Y/%m/%d') %>
            <% end %>
          </td>
          <td><%= order.name(members_id: params[members_id]) %></td>
          <td><%= order.quantity %></td>
          <td><%= order.order_status %></td>
        </tr>
      </tbody>
  </table>