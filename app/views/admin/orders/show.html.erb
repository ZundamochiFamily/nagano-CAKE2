<h2 class="head-line title_h2 text-center">注文履歴詳細</h2>
  <div class="row">
    <div class="col-xs-12" >
      <div class="col-xs-9">
		<div class="field">
		  <div class="col-xs-4">
			購入者
		  </div>
		  <div class="col-xs-8">
		    <%= @order.member.last_name %><%= @order.member.first_name %>
		  </div>
		</div>
	    <div class="field">
	      <div class="col-xs-4">
	        配送先
	      </div>
	      <div class="col-xs-8">
	        <%= @order.postal_code %><%= @order.address %>
	      </div>
	    </div>
	    <div class="field">
	      <div class="col-xs-4">
	        支払い方法
	      </div>
	      <div class="col-xs-8">
	        <%= @order.payment_method %>
	      </div>
	    </div>
 	  <%= form_for(@order, url: admin_order_path, method: :patch) do |f| %>
 	    <div class="col-xs-4">注文ステータス</div>
      	  <div class="col-xs-6">
            <%= f.select :order_status, Order.order_statuses.keys %>
          </div>
      	<div class="actions">
          <div class="col-xs-2"><%= f.submit '更新' ,class: "btn btn-primary" %></div>
      	</div>
      <% end %>
      </div>
	  <div class="buyer-order col-xs-9">
			<table class="table table-hover table-bordered table-inverse">
			    <thead>
			        <tr class="info">
			          <th class="col-xs-4">商品名</th>
			          <th>単価（税込）</th>
			          <th>数量</th>
			          <th>小計</th>
			          <th>製作ステータス</th>
			        </tr>
			    </thead>
				<tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
          <td><%= order_detail.item.item_name %></td>
          <td><%= order_detail.item.tax_excluded_price.to_s(:delimited) %></td>
          <td><%= order_detail.quantity %></td>
          <td><%= order_detail.item.tax_excluded_price*order_detail.quantity %></td>
          <%= form_with(model: order_detail, url: admin_ordered_item_path(order_detail.id),local:true,method: :patch) do |f| %>
          <td>
          <%= f.select:make_status,OrderedItem.make_statuses.keys %>
          <%= f.submit '更新' %>
          </td>
          
          <% end %>
          </tr>
          <% end %>
			</tbody>
			</table>
	  </div>
	  <div class="col-xs-3  billing">
			<table class="table table-hover table-bordered table-condensed">
				<label>商品合計</label>
				<%= @total.inject{|sum,n| sum + n} %>
				<label>配送料</label>
				<%= @shipping %>
				<label>請求金額合計</label>
				<% if @total.count == 1 %>
				 <%= @total + @shipping %>
				<% else %>
				 <%= @total.inject{|sum, n| sum + n } + @shipping %>
				<% end %>
		    </table>
	  </div>
	  </div>
  </div>
