<h2 class="head-line title_h2 text-center">注文履歴詳細</h2>

    <div class="col-xs-12" >


    <ul>
		<li class="form-group">
		  <div class="form-tit">
			購入者
		  </div>
		  <div>
		    <%= @order.member.last_name %><%= @order.member.first_name %>
		  </div>
		</li>

	   <li class="form-group">
	      <div class="form-tit">
	        配送先
	      </div>
	      <div>
	        <%= @order.postal_code %><%= @order.address %>
	      </div>
	   </li>

	    <li class="form-group">
	      <div class="form-tit">
	        支払い方法
	      </div>
	      <div>
	        <%= @order.payment_method %>
	      </div>
	    </li>

	  <li class="form-group">
 	  <%= form_for(@order, url: admin_order_path, method: :patch) do |f| %>
 	    <div class="form-tit">注文ステータス</div>
      	  <div>
            <%= f.select :order_status, Order.order_statuses.keys %>
            <%= f.submit '更新' ,class: "btn btn-primary" %></p>
          </div>
      <% end %>
      </li>
    </ul>
	  <div class="buyer-order col-xs-9">
			<table class="table table-hover table-bordered table-inverse">
			    <thead>
			        <tr class="info">
			          <th class="col-xs-4">商品名</th>
			          <th>単価（税込）</th>
			          <th>数量</th>
			          <th>小計</th>
			          <th>製作ステータス</th>
			        </tr>
			    </thead>
				<tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
          <td><%= order_detail.item.item_name %></td>
          <td><%= order_detail.item.tax_excluded_price.to_s(:delimited) %></td>
          <td><%= order_detail.quantity %></td>
          <td><%= order_detail.item.tax_excluded_price*order_detail.quantity %></td>
          <%= form_with(model: order_detail, url: admin_ordered_item_path(order_detail.id),local:true,method: :patch) do |f| %>
          <td>
          <%= f.select:make_status,OrderedItem.make_statuses.keys %>
          <%= f.submit '更新' %>
          </td>

          <% end %>
          </tr>
          <% end %>
			</tbody>
			</table>
	  </div>
	  <div class="cost">
			<table class="table table-hover table-bordered">
				<div>
				<label>商品合計</label>
				<%= @total.inject{|sum,n| sum + n} %>円
				</div>

				<div>
				<label>配送料</label>
				<%= @shipping %>円
				</div>
				<div>
				<label>請求金額合計</label>
				<% if @total.count == 1 %>
				 <%= @total + @shipping %>円
				<% else %>
				 <%= @total.inject{|sum, n| sum + n } + @shipping %>円
				<% end %>
				</div>
		    </table>
	  </div>
	  </div>
