<h1>ジャンル一覧・追加</h1>
<%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
<div>ジャンル
<%= f.text_field :genre_name %>
</div>
<div>
  <%= f.radio_button :is_activated, :true %>
  <%= f.label :is_activated, "有効"%>
  <%= f.radio_button :is_activated, :false %>
  <%= f.label :is_activated, "無効"%>
</div>
<%= f.submit "追加する" %>
<% end %>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th>状態</th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.genre_name %></td>
        <td><% if genre.is_activated == true %>
        有効
        <% else %>
        無効
        <% end %>
        </td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
