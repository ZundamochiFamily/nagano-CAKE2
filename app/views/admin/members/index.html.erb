<h2 class="title">会員一覧</h2>

  <table>
    <thead>
     <tr>
       <th>会員ID</th>
       <th>氏名</th>
       <th>メールアドレス</th>
       <th>ステータス</th>
     </tr>
   </thead>
   <tbody>
     <% @members.each do |member| %>
     <tr>
       <td><%= member.id %></td>
       <td>
         <%= link_to admin_member_path(member) do %>
         <%= member.first_name %>
         <%= member.last_name %>
         <% end %>
        </td>
       <td><%= member.email %></td>
       <td>
         <% if member.is_deleted == false %>
         <p>有効</p>
         <% elsif member.is_deleted == true  %>
         <p>無効</p>
         <% end %>
        </td>
     </tr>
     <% end %>
   </tbody>
  </table>
